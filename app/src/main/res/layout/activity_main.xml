<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/challenge_1_button"
        android:layout_width="136dp"
        android:layout_height="118dp"
        android:layout_marginTop="96dp"
        android:fontFamily="@font/rhodium_libre"
        android:text="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="48dp"
        app:layout_constraintEnd_toStartOf="@+id/challenge_2_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/challenge_2_button"
        android:layout_width="136dp"
        android:layout_height="118dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="44dp"
        android:fontFamily="@font/rhodium_libre"
        android:text="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/challenge_4_button"
        android:layout_width="136dp"
        android:layout_height="118dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="44dp"
        android:fontFamily="@font/rhodium_libre"
        android:text="4"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/challenge_2_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/challenge_5_button"
        android:layout_width="136dp"
        android:layout_height="118dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/rhodium_libre"
        android:text="5"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="48dp"
        app:layout_constraintEnd_toStartOf="@+id/challenge_6_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/challenge_3_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/challenge_6_button"
        android:layout_width="136dp"
        android:layout_height="118dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="44dp"
        android:fontFamily="@font/rhodium_libre"
        android:text="6"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/challenge_4_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/challenge_3_button"
        android:layout_width="136dp"
        android:layout_height="118dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/rhodium_libre"
        android:text="3"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="48dp"
        app:layout_constraintEnd_toStartOf="@+id/challenge_4_button"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/challenge_1_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="56dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/rhodium_libre"
        android:text="SUBMIT"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/challenge_5_button"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>